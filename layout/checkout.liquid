<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous"></script>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  </head>
  <body>
    {{skip_to_content_link}}
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
      </div>
    </div>
    
  <script>
      
      setInterval(function(){
        $(".product__description__property").each(function(index) {
          if ( $(this).text().indexOf('kitsItem') > -1 ) { 
            $(this).parent().parent().hide(0);  
          }
        });
      }, 500);

    </script>

<script>
$(document).on('page:load', function() {
  if (Shopify.Checkout.step === "contact_information") {
    $('[data-drawer-toggle="[data-order-summary]"]').click();
  }
  

  
  // only if we're not on the order confirmation tracking page - can be sent in order emails
  // even if it was an Upscribe order
  if (window.location.href.indexOf('/orders/') < 0) {
    $('.product__description__property').each(function() {
      var prop = $(this).val()
      if (prop.indexOf('Subscription')) {
        // we're in an Upscribe checkout and somehow got to Shopify
        // send them to the cart page to reattempt to direct to Upscribe checkout
        window.location.href = "https://vimergy.com/cart"
      }
    })
  }
});
</script>
    {{ tracking_code }}
  {% include 'booster-discounts' %}
  {% include 'zonos-checkout' %}
</body>
</html>
<style>
  .section__content{
      margin-bottom: 10px;
  }
.section.section--shipping-method:after {
    content: "Ship dates above are only estimates, and not guaranteed.";
    font-weight: bold;
}
</style>
