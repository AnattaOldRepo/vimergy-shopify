
{% assign parent_collection = collections[section.settings.parent-collection] %}

{% assign parent_collection_url = parent_collection.url %}
{% assign parent_collection_title = parent_collection.title %}

{% assign collection_hero_image = section.settings.hero-image %}
{% assign collection_info_box_content = section.settings.info-box-content %}
{% assign collection_sub_collection_list = section.settings.sub-collection-list %}


{% include 'collection-template-inner' %}

{% schema %}
{
    "name": "Accessories Collection",
    "settings": [
        {
           "type":      "collection",
           "id":        "parent-collection",
           "label":     "Parent Collection"
        },
        {
            "type": "image_picker",
            "label": "Hero Image",
            "id": "hero-image"         
        },           
        {
            "type": "html",
            "label": "Info Box Content",
            "id": "info-box-content"            
        },
        {
            "type": "link_list",
            "label": "Sub Collection List",
            "id": "sub-collection-list"
        }
    ]
}
{% endschema %}