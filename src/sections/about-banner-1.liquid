<div class="c-about-banner c-about-banner-1 o-flex">
   {% case section.settings.alignment %}
            {% when 'left' %}
                {% assign alignment = "is-left" %}
            {% when 'right' %}
                {% assign alignment = "is-right" %}
    {% endcase %}

    <div class="c-about-banner__img o-flex__item--{{alignment}}  o-flex__col-lg-7">
        <img src="{{ section.settings.image | img_url: '1360x'}}" alt="">
    </div>

    <div class="c-about-banner__info o-flex--center o-flex__item  o-flex__col-lg-5">
        <div class="c-about__content u-textLeft">
            <h2 class="c-heading">{{ section.settings.heading }}</h2>
            <p class="c-copy">{{ section.settings.desc }}</p>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "About Banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "desc",
                "label": "Description"
            },{
                "type": "radio",
                "id": "alignment",
                "label": "Block Alignment",
                "options": [
                    {"value": "left", "label": "left"},
                    {"value": "right", "label": "right"}
                ],
                "default": "left"
            }
        ]
    }
{% endschema %}