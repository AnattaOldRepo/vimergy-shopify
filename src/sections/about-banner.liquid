<div class="c-about-banner o-wrapper--medium">

   {% case section.settings.alignment %}
            {% when 'left' %}
                {% assign alignment = "is-left" %}
            {% when 'right' %}
                {% assign alignment = "is-right" %}
    {% endcase %}

         <div class="c-about-banner__inner">
            <div class="o-flex">
               <div class="o-flex__item--{{alignment}}  o-flex__col-6 ">
                  <div class="c-about-banner__img"><img src="{{ section.settings.image | img_url: '1360x'}}" alt=""></div>
               </div>
               <div class="o-flex__item  o-flex__col-6">
                  <div class="c-about-banner__info">
                     <h2 class="c-about-banner__heading c-about-banner__heading--uppercase">{{ section.settings.heading }}</h2>
                     <p class="c-about-banner__desc">{{ section.settings.desc }}</p>
                  </div>
               </div>
            </div>
         </div>
</div>
{% schema %}
    {
        "name": "About Banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "desc",
                "label": "Description"
            },{
                "type": "radio",
                "id": "alignment",
                "label": "Block Alignment",
                "options": [
                    {"value": "left", "label": "left"},
                    {"value": "right", "label": "right"}
                ],
                "default": "left"
            }
        ]
    }
{% endschema %}  