<div class="c-about-banner c-productCol o-flex o-flex--center">
    <div class="c-productCol__image o-flex__item o-flex__col-lg-5">
          <img src="{{ section.settings.image | img_url: 'master'}}"  alt="">
    </div>
    <div class="c-productCol__content o-flex__item o-flex--center  o-flex__col-lg-7">
        <div class="c-productCol__detail u-textLeft">
            <h1 class="c-heading">{{ section.settings.heading}}</h1>
            <p class="c-copy">{{ section.settings.desc }}</p>
        </div>
    </div>
    <div class="c-sideBartext">
        <p class="c-side-text">{{ section.settings.side-text }}</p>
    </div>
</div>

{% schema %}
    {
        "name": "About Banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
             {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
             {
                "type": "text",
                "id": "desc",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "side-text",
                "label": "Side Text"
            }

        ]
    }
{% endschema %}
