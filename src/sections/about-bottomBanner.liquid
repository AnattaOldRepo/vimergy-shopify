<div class="c-about-bannerFull c-hero c-hero--bottom">
  <div class="o-flex">
      <div class="o-flex__item  c-sideBartext" >
        <p class="c-side-text">{{ section.settings.side-text }}</p>
      </div>
    <div class="o-flex__item  c-hero-img" style="background-image: url('{{ section.settings.image | img_url: 'master' }}');">
    <div class="c-home-hero-info">
        <h2 class="c-heading">{{section.settings.heading}}</h2>
        <p class="c-copy">{{ section.settings.text }}</p>
    </div>
  </div>
</div>

{% schema %}
    {
        "name": "About Bottom Banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
             {
                "type": "text",
                "id": "side-text",
                "label": "Side Text"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            }

        ]
    }
{% endschema %}
