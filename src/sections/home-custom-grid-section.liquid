    "name": "Home Custom Grid Section",
    "class": "index-section",
    "blocks": [
        {
            "type": "image-grid-item",
            "name": "Image Grid Item",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "image"         
                },
                {
                    "type": "text",
                    "label": "Link",
                    "id": "link"
                }                 
            ]
        },
        {
            "type": "product-grid-item",
            "name": "Product Grid Item",
            "settings": [
                {
                    "type": "product",
                    "label": "Product",
                    "id": "product"
                },
                {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "image"         
                }                
            ]
        },
        {
            "type": "cta-grid-item",
            "name": "Cta Grid Item",
            "settings": [
                {
                    "type": "html",
                    "label": "Title",
                    "id": "title"
                },
                {
                    "type": "color",
                    "label": "CTA Title Color",
                    "id": "cta-title-color"
                },                    
                {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "image"         
                },                  
                {
                    "type": "text",
                    "label": "CTA Text",
                    "id": "cta-text"
                },                       
                {
                    "type": "text",
                    "label": "CTA Link",
                    "id": "cta-link"
                } 
            ]
        }
    ],
    "presets": [{
        "name": "Home Custom Grid Section",
        "category": "Home Page"
    }]    
