<div class="c-mainTestimonial o-flex o-flex--center">
    <div class="c-mainTestimonial__image o-flex__item o-flex__col-lg-7 o-flex__item--reverse">
        <img src="{{ section.settings.image | img_url: 'master'}}"  alt="">
    </div>
    <div class="c-testimonial_info o-flex__item o-flex__col-lg-5">
        <div class="c-testimonial__text u-textLeft">
            <h1 class="c-testimonial--heading">{{ section.settings.heading}}</h1>
            <h4 class="c-testimonial--desc">{{ section.settings.desc }}</h4>
            <h4 class="c-testimonial__author">{{ section.settings.author}}</h4>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Home main testimonial",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
             {
                "type": "html",
                "id": "heading",
                "label": "Heading"
            },
             {
                "type": "html",
                "id": "desc",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "author",
                "label": "Author"
            }
        ]
    }
{% endschema %}