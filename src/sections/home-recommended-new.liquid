<div class="c-productCol o-flex o-flex--center">
    <div class="c-productCol__image o-flex__item o-flex__col-lg-7">
          <img src="{{ section.settings.image | img_url: 'master'}}"  alt="">
    </div>
    <div class="c-productCol__content o-flex__item o-flex--center  o-flex__col-lg-5">
        <div class="c-productCol__detail">
            <h1 class="c-heading">{{ section.settings.heading}}</h1>
            <h3 class="c-subheading">{{ section.settings.text }}</h3>
            <p class="c-copy">{{ section.settings.desc }}</p>
            <a class="c-btn c-btn-primary" href="{{ section.settings.button-link }}">SHOP NOW</a>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Home Recomended Products",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
             {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
             {
                "type": "text",
                "id": "desc",
                "label": "Description"
            },
             {
                "type": "text",
                "id": "button-link",
                "label": "Button Link"
            }

        ]
    }
{% endschema %}