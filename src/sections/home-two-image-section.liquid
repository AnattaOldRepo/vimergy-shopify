<div class="c-hpTwoImgSection o-wrapper">
    <div class="c-hpTwoImgSection__inner">
        <div class="c-hpTwoImg__contentSection">
            <h3 class="c-hpTwoImg__displayText">{{ section.settings.display-text }}</h3>
            <h2 class="c-hpTwoImg__titleText js-animElement__alcoholidaysText--desktop
            js-animTrigger__alcoholidaysText--desktop">{{ section.settings.title}}</h2>
            {% if section.settings.cta-text %}
                <a class="c-hpTwoImg__cta" hrf="{{ section.settings.cta-link }}">
                    {{ section.settings.cta-text }}
                    <svg class="c-hpTwoImg__ctaArrow" width="23px" height="12px" viewBox="0 0 23 12" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <g id="Symbols" class="c-hpTwoImg__ctaArrowPath" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                            <g  id="375-happy-alcoholidays" transform="translate(-316.000000, -244.000000)">
                                <g id="happy-alcoholidays">
                                    <g id="text" transform="translate(309.000000, 0.000000)">
                                        <g id="arrow" transform="translate(18.500000, 250.000000) rotate(-90.000000) translate(-18.500000, -250.000000) translate(13.000000, 239.000000)">
                                            <path d="M5.20127143,21.6102857 L5.20127143,0" id="Stroke-420"></path>
                                            <polyline id="Stroke-421" points="10.4028571 16.4087 5.20142857 21.6101286 0 16.4087"></polyline>
                                        </g>
                                    </g>
                                </g>
                            </g>
                        </g>
                    </svg>
                </a>
            {% endif %}
        </div>

        <div class="c-hpTwoImg__imageOneContainer">
            <h2 class="c-hpTwoImg__imageTitleText js-animElement__alcoholidaysText--desktop
            js-animTrigger__alcoholidaysText--desktop">{{ section.settings.title}}</h2>
            <img class="c-hpTwoImg__imageOne lazy-load" src="{{ section.settings.image-one | img_url: 'master' }}">
        </div>

        <img class="c-hpTwoImg__imageOneMobile lazy-load" src="{{ section.settings.image-one-mobile | img_url: 'master' }}">    

        <img class="c-hpTwoImg__imageTwo lazy-load" src="{{ section.settings.image-two | img_url: 'master' }}">

        <img class="c-hpTwoImg__imageTwoMobile lazy-load" src="{{ section.settings.image-two-mobile | img_url: 'master' }}">
    </div>
</div>


{% schema %}
{
    "name": "Home Two Image Section",
    "class": "index-section",
    "settings": [
        {
            "type": "image_picker",
            "label": "Image One",
            "id": "image-one"
        },
        {
            "type": "image_picker",
            "label": "Image One Mobile",
            "id": "image-one-mobile"
        },        
        {
            "type": "image_picker",
            "label": "Image Two",
            "id": "image-two"
        },        
        {
            "type": "image_picker",
            "label": "Image Two Mobile",
            "id": "image-two-mobile"
        },           
        {
            "type": "textarea",
            "label": "Display Text",
            "id": "display-text"
        },      
        {
            "type": "text",
            "label": "Title",
            "id": "title"
        },             
        {
            "type": "text",
            "label": "CTA Link",
            "id": "cta-link"
        },              
        {
            "type": "text",
            "label": "CTA Text",
            "id": "cta-text"
        }
    ],
    "presets": [{
        "name": "Home Two Image Section",
        "category": "Home Page"
    }]    
}
{% endschema %}