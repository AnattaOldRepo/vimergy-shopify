<div class="c-product-detail">
    <div class="c-row">
        <h2 class="c-product-detail__heading">Learn more about this product</h2>
    </div>
    <div class="c-row">
        <div class="accordion js-accordion">

            <div class="accordion__heading">
                Product info </div>

            <div class="accordion__panel" style="display: none;">
                <div class="accordion__content">
                   {{ product.metafields.c_f.prod-info }}
                </div>
            </div>

            <div class="accordion__heading">
                How to use </div>

            <div class="accordion__panel">
                <div class="accordion__content">     
                     {{ product.metafields.c-f.usage }}
            </div>
            </div>

            <div class="accordion__heading">
                Resources </div>

            <div class="accordion__panel">
                <div class="accordion__content">
                    <div class="product-resource">
                        <p>
                        {{product.metafields.c_f.resources}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


