<div id="offcanvas-left" class="c-offcanvas c-offcanvas--left" aria-hidden="true">
    <button type="button" class="c-offcanvas__close" aria-label="Close Menu">
        <svg width="16px" height="16px" viewBox="0 0 16 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="home" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                <g id="375-03-home-menu@2x" transform="translate(-329.000000, -29.000000)" stroke-width="2" stroke="#000000">
                    <g id="icon-close" transform="translate(330.000000, 30.000000)">
                        <g id="error-1">
                            <path d="M0,0 L14,14" id="Line"></path>
                            <path d="M0,0 L14,14" id="Line-Copy" transform="translate(7.000000, 7.000000) scale(-1, 1) translate(-7.000000, -7.000000) "></path>
                        </g>
                    </g>
                </g>
            </g>
        </svg>
    </button>

    <div class="c-mobileNavContainer">
        <nav class="c-mobileNav">
            <ul class="c-mobileNav__menu">

                {% for link in linklists.main-menu.links %}
                    <li class="c-mobileNav__item">
                        <a class="c-mobileNav__itemLink {% if link.active %} is-active {% endif %}" href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endfor %} 

                <li class="c-mobileNav__item">
                    <a class="c-mobileNav__itemLink c-menu__item--help" href="https://vimergy.myshopify.com/pages/customer-service">Help</a>
                </li>
                <li class="c-mobileNav__item">
                    <a class="c-mobileNav__itemLink c-menu__item--signin" 
                    {% if customer %}
                        href="https://vimergy.myshopify.com/account"
                        {% else %}
                       href="https://vimergy.myshopify.com/account/login"
                        {% endif %}
                    > {% if customer %}
                        My Account
                        {% else %}
                        Log In
                        {% endif %}</a>
                </li>  

                <li class="c-mobileNav__item">
                    <a class="c-mobileNav__itemLink c-menu__item--can"  href="https://www.amazon.ca/s/ref=nb_sb_noss?url=search-alias%3Daps&amp;field-keywords=Vimergy&amp;rh=i%3Aaps%2Ck%3AVimergy"  target="_blank">CAN</a>
                </li>
                <li class="c-mobileNav__item">
                    <a class="c-mobileNav__itemLink c-menu__item--aus" target="_blank" href="https://floweroflife.com.au" target="_blank">AUS</a>
                </li>  
            </ul> 
        </nav>  
    </div>
</div>
 