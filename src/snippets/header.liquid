<div class="c-header">
    <div class="c-header_container o-wrapper u-clearFix">
        <div class="c-hamburger js-offcanvas" data-offcanvas-src="#offcanvas-left">
            <span class="c-hamburgerPatty c-hamburgerPatty--top"></span>
            <span class="c-hamburgerPatty c-hamburgerPatty--middle"></span>
            <span class="c-hamburgerPatty c-hamburgerPatty--bottom"></span>
        </div>
        <div class="c-header__logo">
            {% if template != 'index' %}
                <a class="c-logo" href="{{ shop.secure_url }}">
                  <div class="vimergy-logo"></div>
                </a>
            {% else %}
               <div class="vimergy-logo"></div>
            {% endif %}
        </div>
        <div class="c-header__nav u-hideTabletLargeDown ">
            <menu class="c-megamenu js-megamenu" role="navigation">
                <ul>
                    {% for link in linklists.new-menu.links %}
                        <li class="c-megamenu__item c-megamenu__navitem">
                            <a class="c-megamenu__link {% if link.active %} is-active {% endif %}" href="{{ link.url }}">{{ link.title }}</a>
                            {% if link.links != blank %}
                                <div class="c-megamenu__subnav">
                                     <div class="c-megamenu__subnavInner">

                                            {% for child_link in link.links %}
                                            <div class="c-megamenu__subnavGroup">
                                             <a  class="c-megamenu__box" href="{{ child_link.url }}">
                                             <img src="{{ child_link.object.featured_image | img_url: 'medium'  }}" />
                                                <span>{{ child_link.title }}<span>{{ child_link.object.price | money }}</span></span></a>
                                            </div>
                                            {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </menu>
        <div class="c-search-box c-search-display">
        <form action="/search" method="get" class="input-group search-bar" role="search" >
        <input type="hidden" name="type" value="product">
        <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" class="input-group-field search-input" aria-label="{{ 'general.search.placeholder' | t }}" style="display:none;">
             <span class="c-search-close" data-action="search-close" style="display:none;">
             <svg class="c-search-close-icon" width="14px" height="14px" viewBox="0 0 10 8" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <g id="home" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                                <g id="1440-02-home-minicart@2x" transform="translate(-315.000000, -101.000000)" stroke="#000000">
                                    <g id="item" transform="translate(30.000000, 81.000000)">
                                        <g id="icon-remove" transform="translate(286.000000, 20.000000)">
                                            <path d="M0,0 L8,8" id="Line"></path>
                                            <path d="M0,0 L8,8" id="Line-Copy" transform="translate(4.000000, 4.000000) scale(-1, 1) translate(-4.000000, -4.000000) "></path>
                                        </g>
                                    </g>
                                </g>
                            </g>
                        </svg>
            </span>
        <span class="input-group-btn">
        <button type="submit" class="btn icon-fallback-text search-button c-search-button">
            <span class="icon icon-search" aria-hidden="true"><img class="search-icon" src="data:image/png;base64,"></span>
            {% comment %} <span class="fallback-text">{{ 'general.search.submit' | t }}</span> {% endcomment %}

        </button>

        </span>
        </form>
    </div>
            <ul class="c-menu" >
                <li class="c-menu__item">
                    <a class="c-menu__link"
                     {% if customer %}
                        href="https://vimergy.myshopify.com/account"
                        {% else %}
                       href="https://vimergy.myshopify.com/account/login"
                        {% endif %}
                     >
                        {% if customer %}
                        My Account
                        {% else %}
                        SIGN In
                        {% endif %}
                    </a>
                </li>
            </ul>
        </div>

        <div class="c-header__cart">
        <div style="position:relative;"><div id="CartCount"></div></div>

            {% include 'cart-logo' %}
        </div>
    </div>
</div>



<script>
$('.search-button').click(function() {
  $('.search-input').toggle();
  $('.c-search-close').toggle();
  $('.search-button').toggle();
  $('.c-megamenu').toggle();
});

$('.c-search-close').click(function() {
    $('input[name="q"]').val('');
    $('.search-input').toggle();
    $('.c-search-close').toggle();
    $('.search-button').toggle();
    $('.c-megamenu').toggle();
});

 $('.search-bar').submit(function(e) {

       var term = $(this).find('input[name="q"]').val();
        console.log(term,"term")
       if(term == '' || term == undefined){

           return false;
       }

    });

</script>