<!-- /templates/customers/activate_account.liquid -->

<div class="c-account c-account--activation">
  <div class="c-account__sectionsContainer">
    <div class="c-account__sectionMain">
        <div class="c-account__section">
            <h1 class="c-account__title">{{ 'customer.activate_account.title' | t }}</h1>
            <p class="c-account__infoText">{{ 'customer.activate_account.subtext' | t }}</p>

                {% comment %}
                  This form must use 'activate_customer_password'
                {% endcomment %}
              {% form 'activate_customer_password' %}

                {{ form.errors | default_errors }}

                <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customer.activate_account.password' | t }}">

                <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">

                <input type="submit" class="c-btn c-btn--large-new" value="Activate Account">
                <input type="submit" class="c-account__link--normalInput" name="decline" value="Decline Invitation">
              {% endform %}
        </div>
    </div>
  </div>
</div>
